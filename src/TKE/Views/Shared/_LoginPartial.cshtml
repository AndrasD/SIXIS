@using System.Security.Claims

@if (User.IsSignedIn())
{
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    <span class="glyphicon glyphicon-user"></span> @User.GetUserName() <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Manage" asp-action="Index"><span class="glyphicon glyphicon-user"></span> Profilom</a></li>
                    <li><a asp-controller="Account" asp-action="Logout"><span class="glyphicon glyphicon-log-out"></span> Kilépés</a></li>
                </ul>
            </li>
        </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Regisztráció</a></li>
        <li><a asp-controller="Home" asp-action="Index">Bejelentkezés</a></li>
    </ul>
}
