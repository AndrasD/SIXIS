@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using System.Security.Claims

@model IEnumerable<TKE.Models.Dolgozo>

@{
    ViewData["Title"] = "Dolgozók";
}

@if (User.IsSignedIn())
{
    <h2>Dolgozók kezelése</h2>
    <hr />
    <div class="container" style="margin-top:50px">
        <div style="margin:7px">
            <div class="col-md-6 form-group">
                <input type="text" class="form-control" placeholder="Szűrés">
            </div>
            <a asp-action="Create" class="btn btn-primary pull-right"><b>+</b> Új dolgozó felvitele</a>
        </div>
        <div class="panel-body" style="padding:0px">
            <table class="table table-striped table-bordered" style="margin:0px">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Azonosito)</th>
                        <th>@Html.DisplayNameFor(model => model.DolgozoNev)</th>
                        <th>@Html.DisplayNameFor(model => model.Szint)</th>
                        <th>@Html.DisplayNameFor(model => model.OraHK)</th>
                        <th>@Html.DisplayNameFor(model => model.OraHV)</th>
                        <th>@Html.DisplayNameFor(model => model.KmSzorzo)</th>
                        <th style="width:100px">Műveletek</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Azonosito)</td>
                            <td>@Html.DisplayFor(modelItem => item.DolgozoNev)</td>
                            <td>@Html.DisplayFor(modelItem => item.Szint)</td>
                            <td>@Html.DisplayFor(modelItem => item.OraHK)</td>
                            <td>@Html.DisplayFor(modelItem => item.OraHV)</td>
                            <td>@Html.DisplayFor(modelItem => item.KmSzorzo)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.DolgozoID" class="btn btn-primary btn-xs" title="Modosit"><i class="glyphicon glyphicon-pencil"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.DolgozoID" class="btn btn-danger btn-xs" title="Torol"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <ul class="pager">
                <li><a href="#"><i class="glyphicon glyphicon-arrow-left"></i> Előző</a></li>
                <li><a href="#">Következő <i class="glyphicon glyphicon-arrow-right"></i></a></li>
            </ul>
        </div>
    </div>
}

